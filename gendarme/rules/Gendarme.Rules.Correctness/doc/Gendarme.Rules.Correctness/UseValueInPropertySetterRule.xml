  <Attributes>
    <Attribute>
      <AttributeName>Gendarme.Framework.Solution("The setter should use 'value' or, if unneeded, you should consider remove the setter to reduce possible confusion.")</AttributeName>
    </Attribute>
    <Attribute>
      <AttributeName>Gendarme.Framework.Problem("This property setter doesn't use 'value'.")</AttributeName>
    </Attribute>
