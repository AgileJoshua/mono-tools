    <Attribute>
      <AttributeName>Gendarme.Framework.FxCopCompatibility("Microsoft.Usage", "CA2218:OverrideGetHashCodeOnOverridingEquals")</AttributeName>
    </Attribute>
    <Attribute>
      <AttributeName>Gendarme.Framework.Solution("Implement the missing method.")</AttributeName>
    </Attribute>
    <Attribute>
      <AttributeName>Gendarme.Framework.Problem("This type only implements one of the Equals(Object) or GetHashCode() methods.")</AttributeName>
    </Attribute>
