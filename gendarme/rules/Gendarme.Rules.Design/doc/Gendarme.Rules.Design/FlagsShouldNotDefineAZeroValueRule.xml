      <AttributeName>Gendarme.Framework.FxCopCompatibility("Microsoft.Design", "CA1008:EnumsShouldHaveZeroValue")</AttributeName>
    </Attribute>
    <Attribute>
      <AttributeName>Gendarme.Framework.Solution("Remove the 0 value(s) from the flag.")</AttributeName>
